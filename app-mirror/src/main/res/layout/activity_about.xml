<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="软件使用方法请查看短视频平台介绍或访问 connect-screen.com 。屏连入口是扩展投屏模式，屏易连入口是镜像投屏模式。"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/versionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本："
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/qqLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最新版本：从QQ群 “安卓屏连” 获取"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/websiteLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="官网：connect-screen.com"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/xiaohongshuLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小红书：安卓屏连"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/bilibiliLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="b站：屏易连"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/douyinLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="抖音：安卓屏连"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/youtubeLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Youtube: 安卓屏连"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:autoLink="web"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <TextView
        android:id="@+id/aboutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_primary" />

</LinearLayout> 
</ScrollView>