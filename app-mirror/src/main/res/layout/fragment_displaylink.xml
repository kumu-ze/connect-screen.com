<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DisplayLink设备详情"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/detailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="显示器尺寸"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/resolutionPresetSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/displayWidthInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="宽度"
            android:inputType="number"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/monitorHeightInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="高度"
            android:inputType="number"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DPI"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/dpiInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="DPI (默认160)"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frameRateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="帧率"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/frameRateInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="帧率 (默认60)"
            android:inputType="number"/>
            
    </LinearLayout>

    <CheckBox
        android:id="@+id/rotatesWithContentCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跟随内容旋转"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/skipMediaProjectionPermissionCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳过询问媒体投影权限"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/autoOpenLastAppCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动打开上次应用"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/mirrorViaDisplaylinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Displaylink 单应用投屏"/>

    <Button
        android:id="@+id/launch_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="选择单个应用"/>

    <Button
        android:id="@+id/view_virtual_display_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="查看虚拟显示器"/>

</LinearLayout>