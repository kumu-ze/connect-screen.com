<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改在下次应用启动才生效"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- 权限状态卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权限状态"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/shizukuStatusPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shizuku: "
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/shizukuStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/shizukuPermissionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="60dp"
                    android:text="授权"
                    android:textSize="12sp"
                    android:visibility="gone"
                    style="@style/Widget.App.Button.Primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无障碍: "
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/accessibilityStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/accessibilityPermissionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="60dp"
                    android:text="授权"
                    android:textSize="12sp"
                    android:visibility="gone"
                    style="@style/Widget.App.Button.Primary" />

                <CheckBox
                    android:id="@+id/disableAccessibilityCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="禁用"
                    android:textSize="13sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬浮窗: "
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/overlayStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/overlayPermissionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="60dp"
                    android:text="授权"
                    android:textSize="12sp"
                    android:visibility="gone"
                    style="@style/Widget.App.Button.Primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- 投屏模式卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投屏模式"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/singleAppModeCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单应用投屏（可以投微软桌面这类启动器类型的应用）"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <LinearLayout
                android:id="@+id/singleAppContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingStart="12dp"
                android:background="@color/bg_primary"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/selectAppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择被投屏应用"
                    android:layout_marginTop="6dp"
                    style="@style/Widget.App.Button.Secondary" />

                <CheckBox
                    android:id="@+id/autoBindInputCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自动移动鼠标等到外接屏幕"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:padding="6dp" />

                <CheckBox
                    android:id="@+id/autoMoveImeCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自动移动输入法到外接屏幕"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:padding="6dp" />

                <CheckBox
                    android:id="@+id/useTouchscreenCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用主屏触摸控制扩展屏"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:padding="6dp" />

                <LinearLayout
                    android:id="@+id/dpiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DPI文字大小: "
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <EditText
                        android:id="@+id/dpiEditText"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:hint="160"
                        android:text="160"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/settings_card_bg"
                        android:padding="6dp" />

                    <Button
                        android:id="@+id/dpiConfirmButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:text="确认"
                        style="@style/Widget.App.Button.Primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 显示设置卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示设置"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/autoRotateCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动旋转"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/autoScaleCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动缩放去黑边"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/autoMatchAspectRatioCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动改变主屏宽高比以适配扩展屏"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/currentResolutionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Displaylink 输出分辨率: "
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:padding="6dp" />

                <Button
                    android:id="@+id/resolutionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改 Displaylink 输出分辨率"
                    style="@style/Widget.App.Button.Secondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- 功能设置卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能设置"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/autoScreenOffCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动熄屏"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/useBlackImageCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用黑色图片模拟熄屏"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/disableUsbAudioCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停用USB外接屏幕的声音输出"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/showFloatingInMirrorModeCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在镜像模式下也显示悬浮返回键"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/preventAutoLockCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阻止自动锁屏"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/autoHideFloatingCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动隐藏悬浮返回键"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Moonlight设置卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moonlight 连接"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/disableRemoteSubmixCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="moonlight无声音，尝试不使用 REMOTE_SUBMIX"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <CheckBox
                android:id="@+id/autoConnectClientCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动连接moonlight自启版"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="6dp" />

            <LinearLayout
                android:id="@+id/clientConnectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/clientSpinner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/settings_card_bg" />

                <Button
                    android:id="@+id/connectClientButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="连接"
                    style="@style/Widget.App.Button.Primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- 关于 -->
        <Button
            android:id="@+id/aboutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="关于"
            style="@style/Widget.App.Button.Secondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="* 安卓系统设置里的无线投屏创建的无线屏幕，也可以用 shizuku 权限投单应用\n* USB 3.0 有线直连的屏幕，无需 shizuku 权限就能投单应用"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView> 